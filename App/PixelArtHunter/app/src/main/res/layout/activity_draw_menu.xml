<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <net.kteam.pixelarthunter.PixelGridView
        android:id="@+id/pixelGridView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="50"
        app:layout_constraintDimensionRatio="1:1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10">

        <Button
            android:id="@+id/drawOnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/moveOnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/eraserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40">

        <Button
            android:id="@+id/paint1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_button_background"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/paint2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/paint2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_button_background"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintStart_toEndOf="@+id/paint1"
            app:layout_constraintEnd_toStartOf="@+id/paint3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/paint3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_button_background"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintStart_toEndOf="@+id/paint2"
            app:layout_constraintEnd_toStartOf="@+id/paint4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/paint4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_button_background"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintStart_toEndOf="@+id/paint3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
